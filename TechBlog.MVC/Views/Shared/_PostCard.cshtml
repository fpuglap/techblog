@model Post

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id">
            <img src="@Model.ImageThumbnailUrl" style="width:100%; height:200px;" alt="@Model.Title">
        </a>
        <div class="caption">
            <h6 class="float-right">@Model.Views Views</h6>
            <h5>
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
            </h5>
            <p>@Model.Description</p>
        </div>
    </div>
</div>